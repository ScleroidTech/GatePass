<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_card_view_example1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    tools:showIn="@layout/fragment_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:elevation="4dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/list_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Person Name 1"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardview_list_title11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_person_name"
            android:layout_marginTop="15dp"
            android:text="Total loan"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/list_total_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_list_title11"
            android:text="RS 200000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cardview_list_title19"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/list_person_name"
            android:layout_marginTop="15dp"
            android:text="Received Amount"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/list_received_amount"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_below="@+id/cardview_list_title19"
            android:layout_marginRight="35dp"
            android:text="Rs 20000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cardview_image12"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_assignment_turned_in_black_24dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>